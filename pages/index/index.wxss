/**index.wxss**/
.container {
    height: 100%;
}

.banner-wrap {
    margin-top: 6rpx;
}
.banner-wrap .img {
    width: 100%;
    height: 480rpx;
    /* background-image: cover; */
}
.goods {
    margin-top: 24rpx;
}
.goods .title {
    /* text-align: center; */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #F9F9F9;
    width: 100%;
    height: 95rpx;
}
.goods .title .line {
    width: 1rem;
    height: 4rpx;
    /* border-bottom:1rpx solid red ; */
    background-color: red;
    margin-top: 10rpx;
}
.goods .main {
    width: 100%;
    /* height: 100%; */
    height: 638rpx;
    /* display: flex; */
    /* float: right; */
    /* display: inline-block; */
}
.goods .main .item {
    float: left;
    width: 222rpx;
    height: 306rpx;
    margin: 10rpx;
    /* background-color: blue; */
}
.goods .main .item .image {
    width: 100%;
    height: 200rpx;
    /* background-color: red;  */
    background-color: #F9F9F9;
}
.goods .main .item .image image {
    width: 200rpx;
    height: 200rpx;  
}
.goods .main .item .a {
    height: 30rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    word-break: break-all;
    font-size: 25rpx;
    margin: 8rpx 0 6rpx 0;
    text-overflow: ellipsis;
}
.goods .main .item .b {
    font-size: 30rpx;
    color: red;
}
.goods .txt {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    font-size: 26rpx;
    color: rgb(63, 62, 62);
    overflow: hidden;
}
.goods .contain {
    height: 100%;
}
.nothing {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
}
.nothing .txt {
    font-size: 26rpx;
    color: rgb(175, 172, 172);
}