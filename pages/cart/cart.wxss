page{
    padding-bottom: 90rpx;
}
.address{}
.address .address_btn{
    padding: 20rpx;
}
.address .address_btn button{
    width: 60%;
}
.address .user_info_row{
    display: flex;
    padding: 20rpx;
    
}
.address .user_info_row .user_info{
    flex: 5;
    font-size: 28rpx;
}
.address .user_info_row .user_phone{
    flex: 3;
    text-align: right;
}

.cart_content{}
.cart_content .cart_title{
    padding: 20rpx;
    font-size: 36rpx;
    color: rgb(148, 28, 28);
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}
.cart_content .cart_main{
}
.cart_content .cart_main .cart_item{
    display: flex;
    padding: 10rpx;
    border-bottom: 1px solid #ccc;
}
.cart_content .cart_main .cart_item .cart_chk_wrap{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap image {
    width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_wrap{
    flex: 4;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.cart_info_wrap{}
.cart_info_wrap .goods_name{
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-break: break-all;
    text-overflow: ellipsis;
}
.cart_info_wrap .goods_price_wrap{
    display: flex;
    justify-content: space-between;
}
.cart_info_wrap .goods_price_wrap .goods_price{
    color: red;
    font-size: 34rpx;
}
.cart_info_wrap .goods_price_wrap .cart_num_tool{
    display: flex;
}
.cart_num_tool .num_edit{
    width: 55rpx;
    height: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #ccc;
}
.cart_num_tool .goods_num{
    width: 55rpx;
    height: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.footer_tool{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    height: 90rpx;
    display: flex;
    border-top: 1rpx solid #ccc;
}
.footer_tool .all_chk_wrap{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}
.footer_tool .total_price_wrap{
    flex: 5;
    text-align: right;
    padding-right: 15rpx;
}
.footer_tool .total_price_wrap .total_price{
    font-size: 34rpx;
    font-weight: 600;
}
.total_price .total_price_text{
    color: red;
}
.footer_tool .order_pay_wrap{
    flex: 3;
    background-color: red;
    font-size: 32rpx;
    color: #fff;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cart_none {
    /* display: flex; */
    background-color: red;
    
}
.cart_none .a{
    width: 60%;
